<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutAttendanceContents"
    android:orientation="vertical"
    android:layout_width="110dp"
    android:layout_height="65dp"
    android:layout_marginStart="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/colorGreenAttendPrimary">

    <TextView
        android:id="@+id/textViewAttendanceRound"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="1차시"
        android:textSize="12dp"
        android:textAlignment="center"
        android:gravity="bottom"
        android:textColor="@color/colorBlack"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"></TextView>

    <TextView
        android:id="@+id/textViewAttendanceDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="2018.09.03(월)"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"></TextView>

</LinearLayout>